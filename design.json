{
  "theme": {
    "name": "Modern Dark Theme",
    "version": "1.0.0",
    "description": "Tema oscuro moderno inspirado en interfaces profesionales"
  },
  "colors": {
    "primary": {
      "main": "#818cf8",
      "light": "#a5b4fc",
      "dark": "#6366f1",
      "contrast": "#ffffff"
    },
    "secondary": {
      "main": "#2d3748",
      "light": "#4a5568",
      "dark": "#1a202c",
      "contrast": "#ffffff"
    },
    "background": {
      "primary": "#0f172a",
      "secondary": "#1e293b",
      "tertiary": "#334155",
      "card": "#1e293b",
      "modal": "#0f172a"
    },
    "text": {
      "primary": "#e2e8f0",
      "secondary": "#94a3b8",
      "muted": "#64748b",
      "contrast": "#0f172a"
    },
    "accent": {
      "blue": "#3b82f6",
      "green": "#10b981",
      "yellow": "#f59e0b",
      "red": "#ef4444",
      "purple": "#8b5cf6"
    },
    "ui": {
      "border": "#4b5563",
      "input": "#374151",
      "hover": "#374151",
      "focus": "#6366f1",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "secondary": "'Merriweather', Georgia, serif",
      "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "glow": "0 0 20px rgba(129, 140, 248, 0.3)"
  },
  "components": {
    "button": {
      "primary": {
        "background": "#818cf8",
        "backgroundHover": "#6366f1",
        "color": "#ffffff",
        "border": "none",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "transition": "all 0.2s ease"
      },
      "secondary": {
        "background": "transparent",
        "backgroundHover": "#374151",
        "color": "#e2e8f0",
        "border": "1px solid #4b5563",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "transition": "all 0.2s ease"
      }
    },
    "card": {
      "background": "#1e293b",
      "border": "1px solid #334155",
      "borderRadius": "0.75rem",
      "padding": "1.5rem",
      "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "background": "#374151",
      "backgroundFocus": "#4b5563",
      "color": "#e2e8f0",
      "border": "1px solid #4b5563",
      "borderFocus": "1px solid #818cf8",
      "borderRadius": "0.5rem",
      "padding": "0.75rem 1rem",
      "fontSize": "0.875rem",
      "transition": "all 0.2s ease"
    },
    "modal": {
      "background": "#0f172a",
      "overlay": "rgba(0, 0, 0, 0.75)",
      "border": "1px solid #334155",
      "borderRadius": "0.75rem",
      "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.3)"
    }
  },
  "animations": {
    "duration": {
      "fast": "0.15s",
      "normal": "0.2s",
      "slow": "0.3s"
    },
    "easing": {
      "ease": "ease",
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
} 